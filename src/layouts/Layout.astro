---
import '../styles/global.css';

export interface Props {
	title?: string;
}

const { title = 'Astro Blog' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="A modern blog built with Astro.js and Tailwind CSS" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-900">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
