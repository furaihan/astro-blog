---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
}

const { title, description, date, tags } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date);
---

<Layout title={title}>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-4xl mx-auto px-4 py-6">
        <nav class="mb-4">
          <a href="/" class="text-primary-600 hover:text-primary-700 font-medium">
            ‚Üê Back to Home
          </a>
          <span class="mx-2 text-gray-300">|</span>
          <a href="/blog" class="text-primary-600 hover:text-primary-700 font-medium">
            All Posts
          </a>
        </nav>
        
        <h1 class="text-4xl font-bold text-gray-900 mb-3">
          {title}
        </h1>
        
        <p class="text-xl text-gray-600 mb-4">
          {description}
        </p>
        
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
          <time datetime={date.toISOString()}>
            {formattedDate}
          </time>
          
          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {tags.map(tag => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-xs font-medium">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="max-w-4xl mx-auto px-4 py-8">
      <article class="prose prose-lg prose-gray max-w-none prose-headings:text-gray-900 prose-a:text-primary-600 prose-a:no-underline hover:prose-a:text-primary-700 prose-blockquote:border-primary-300 prose-pre:bg-gray-900 prose-code:bg-gray-100 prose-code:px-2 prose-code:py-1 prose-code:rounded">
        <slot />
      </article>
    </main>
  </div>
</Layout>