---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<Layout>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-4 py-16">
        <div class="text-center">
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            Welcome to My 
            <span class="text-primary-600">Astro Blog</span>
          </h1>
          
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            A modern, fast, and beautiful blog built with Astro.js and Tailwind CSS. 
            Discover insights about web development, technology, and more.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/blog" 
              class="px-8 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors"
            >
              Read Blog Posts
            </a>
            <a 
              href="#features" 
              class="px-8 py-3 border border-primary-600 text-primary-600 rounded-lg font-medium hover:bg-primary-50 transition-colors"
            >
              Learn More
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Features Section -->
    <section id="features" class="py-16">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
          Blog Features
        </h2>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Lightning Fast</h3>
            <p class="text-gray-600">Built with Astro.js for optimal performance and fast loading times.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Markdown Support</h3>
            <p class="text-gray-600">Write your posts in Markdown with full frontmatter support for metadata.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Tagging System</h3>
            <p class="text-gray-600">Organize and categorize your posts with a flexible tagging system.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Posts Section -->
    {recentPosts.length > 0 && (
      <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4">
          <div class="flex justify-between items-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900">
              Recent Posts
            </h2>
            <a 
              href="/blog" 
              class="text-primary-600 hover:text-primary-700 font-medium"
            >
              View all posts →
            </a>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {recentPosts.map((post) => {
              const formattedDate = new Intl.DateTimeFormat('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              }).format(post.data.date);
              
              return (
                <article class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
                  <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-3">
                      <a href={`/blog/${post.slug}`} class="hover:text-primary-600 transition-colors">
                        {post.data.title}
                      </a>
                    </h3>
                    
                    <p class="text-gray-600 mb-4 line-clamp-3">
                      {post.data.description}
                    </p>
                    
                    <div class="flex flex-col gap-3">
                      <time class="text-sm text-gray-500" datetime={post.data.date.toISOString()}>
                        {formattedDate}
                      </time>
                      
                      {post.data.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2">
                          {post.data.tags.slice(0, 3).map(tag => (
                            <span class="px-2 py-1 bg-primary-100 text-primary-700 rounded-full text-xs font-medium">
                              {tag}
                            </span>
                          ))}
                        </div>
                      )}
                    </div>
                    
                    <a 
                      href={`/blog/${post.slug}`}
                      class="inline-block mt-4 text-primary-600 hover:text-primary-700 font-medium text-sm"
                    >
                      Read more →
                    </a>
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      </section>
    )}

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <h3 class="text-xl font-bold mb-4">Ready to start reading?</h3>
        <p class="text-gray-400 mb-6">
          Explore all posts and discover insights about web development and technology.
        </p>
        <a 
          href="/blog" 
          class="inline-block px-8 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors"
        >
          Browse All Posts
        </a>
      </div>
    </footer>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
